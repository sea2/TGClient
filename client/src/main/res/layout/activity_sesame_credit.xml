<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/tv_zhima_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_zhima_top"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tv_zhima_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_66c2cb"
        android:textSize="55sp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_zhima_remark"
        android:layout_width="wrap_content"
        android:textColor="@color/color_66c2cb"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_confirm_next"
        style="@style/btn_bottom_common"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_style_theme_selector"
        android:text="@string/btn_next"
        />


</LinearLayout>
