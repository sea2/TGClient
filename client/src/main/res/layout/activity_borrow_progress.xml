<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_ly_borrow_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                style="@style/common_line"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/iv_progress_step1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/icon_borrow_progress_wait"/>


                        <ImageView
                            android:id="@+id/iv_progress_line1_step"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/shape_borrow_progress_wait"/>

                        <ImageView
                            android:id="@+id/iv_progress_step2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/icon_borrow_progress_wait"/>


                        <ImageView
                            android:id="@+id/iv_progress_line2_step"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/shape_borrow_progress_wait"/>

                        <ImageView
                            android:id="@+id/iv_progress_step3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/icon_borrow_progress_wait"/>


                        <ImageView
                            android:id="@+id/iv_progress_line3_step"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:background="@drawable/shape_borrow_progress_wait"/>

                        <ImageView
                            android:id="@+id/iv_progress_step4"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/icon_borrow_progress_wait"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="91dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/progress_step1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text="申请成功"
                                android:textColor="@color/tv_color_808080"
                                android:textSize="16sp"/>


                            <TextView
                                android:id="@+id/progress_step1_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tv_color_808080"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="91dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/progress_step2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text="借款审批中"
                                android:textColor="@color/tv_color_808080"
                                android:textSize="16sp"/>


                            <TextView
                                android:id="@+id/progress_step2_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/tv_color_808080"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="91dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/progress_step3"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:gravity="center_vertical"
                                android:text="放款成功"
                                android:textColor="@color/tv_color_808080"
                                android:textSize="16sp"/>


                            <TextView
                                android:id="@+id/progress_step3_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/tv_color_808080"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/progress_step4"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text="应还时间"
                                android:textColor="@color/tv_color_808080"
                                android:textSize="16sp"/>


                            <TextView
                                android:id="@+id/progress_step4_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/tv_color_808080"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/btn_confirm_repay"
                    style="@style/btn_bottom_common"
                    android:background="@drawable/btn_style_theme_selector"
                    android:text="立即还款"
                    android:visibility="gone"
                    />


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
