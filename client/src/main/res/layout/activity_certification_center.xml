<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_certify_center_top_statue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/certify_info_top_image_size"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/transparent"/>

            <View
                android:id="@+id/line_left"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="@color/bg_line"/>

            <View
                android:id="@+id/line_right"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="@color/bg_line"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_id_info"
                    android:layout_width="@dimen/certify_info_top_image_size"
                    android:layout_height="@dimen/certify_info_top_image_size"
                    android:background="@drawable/icon_certify_identity_information"/>

                <TextView
                    android:id="@+id/tv_id_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="身份信息"
                    android:textColor="@color/tv_color_4d4d4d"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_phone_info"
                    android:layout_width="@dimen/certify_info_top_image_size"
                    android:layout_height="@dimen/certify_info_top_image_size"
                    android:background="@drawable/icon_certify_phone_information"/>

                <TextView
                    android:id="@+id/tv_phone_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="手机信息"
                    android:textColor="@color/tv_color_4d4d4d"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bank_info"
                    android:layout_width="@dimen/certify_info_top_image_size"
                    android:layout_height="@dimen/certify_info_top_image_size"
                    android:background="@drawable/icon_certify_phone_information"/>

                <TextView
                    android:id="@+id/tv_bank_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="银行卡信息"
                    android:textColor="@color/tv_color_4d4d4d"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <View
        style="@style/common_line"/>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
